<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:weightSum="1"
	android:background="@color/white"
	tools:context="com.peipao8.vehiclelock.activity.LoginActivity">
	
	<TextView
		android:id="@+id/tv_regist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:layout_marginRight="30dp"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:text="注册"
		android:textColor="@color/colorTextGray"
		android:textSize="18dp" />
	
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="60dp"
		android:src="@drawable/logo" />
	
	<EditText
		android:id="@+id/et_phone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="42dp"
		android:layout_marginRight="42dp"
		android:layout_marginTop="80dp"
		android:background="@null"
		android:drawableLeft="@drawable/account"
		android:drawablePadding="5dp"
		android:gravity="center_vertical"
		android:hint="请输入手机号"
		android:inputType="number"
		android:maxLines="1"
		android:textColorHint="@color/colorText"
		android:textSize="14dp" />
	
	<View
		android:layout_width="match_parent"
		android:layout_height="0.5px"
		android:layout_marginLeft="42dp"
		android:layout_marginRight="42dp"
		android:layout_marginTop="5dp"
		android:background="@color/colorText" />
	
	<EditText
		android:id="@+id/et_password"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="42dp"
		android:layout_marginRight="42dp"
		android:layout_marginTop="30dp"
		android:background="@null"
		android:digits="@string/password"
		android:drawableLeft="@drawable/password"
		android:drawablePadding="5dp"
		android:gravity="center_vertical"
		android:hint="请输入密码"
		android:maxLines="1"
		
		android:textColorHint="@color/colorText"
		android:textSize="14dp" />
	
	<View
		android:layout_width="match_parent"
		android:layout_height="0.5px"
		android:layout_marginLeft="42dp"
		android:layout_marginRight="42dp"
		android:layout_marginTop="5dp"
		android:background="@color/colorText" />
	
	<Button
		android:id="@+id/btn_login"
		android:layout_width="284dp"
		android:layout_height="44dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="40dp"
		android:background="@drawable/shape_get_confirm_number"
		android:gravity="center"
		android:text="登录"
		android:textColor="@color/colorWhite"
		android:textSize="18dp" />
	
	<RelativeLayout
		android:layout_width="284dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="10dp"
		android:layout_weight="0.01"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/tv_issue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:gravity="center"
			android:text="登录遇到问题"
			android:textColor="@color/colorText"
			android:textSize="12dp" />
		
		<TextView
			android:id="@+id/tv_forget"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:gravity="center"
			android:text="忘记密码"
			android:textColor="@color/colorText"
			android:textSize="12dp" />
	</RelativeLayout>
	
	
	
	<LinearLayout
		android:layout_width="284dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30dp"
		android:orientation="horizontal">
		
		<TextView
			android:id="@+id/tv_qq"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableTop="@drawable/qq"
			android:gravity="center"
			android:text="QQ"
			android:textColor="@color/colorText" />
		
		<TextView
			android:id="@+id/tv_webchat"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableTop="@drawable/weixin"
			android:gravity="center"
			android:text="微信"
			android:textColor="@color/colorText" />
		
		<TextView
			android:id="@+id/tv_sina"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableTop="@drawable/weibo"
			android:gravity="center"
			android:text="微博"
			android:textColor="@color/colorText" />
	
	</LinearLayout>
</LinearLayout>
