<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/head"
        />

    <TextView
        android:id="@+id/tv_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="上传图像"
        android:textColor="@color/colorText"
        android:textSize="12dp"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="42dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="11"
        android:textColor="@color/colorText"
        android:textSize="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorText"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_confirm_number"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="30dp"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:inputType="number"
            android:background="@null"
            android:maxLength="6"
            android:textColor="@color/colorText"
            android:textSize="14dp"/>

        <View
            android:id="@+id/view_confirm"
            android:layout_width="156dp"
            android:layout_height="0.5px"
            android:layout_below="@id/et_confirm_number"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="14dp"
            android:background="@color/colorText"/>

        <Button
            android:id="@+id/btn_get_confirm_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et_confirm_number"
            android:layout_alignBottom="@+id/et_confirm_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_get_confirm_number"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="30dp"
        android:hint="请输入密码"
        android:maxLines="1"
        android:maxLength="16"
        android:background="@null"
        android:digits="@string/password"
        android:textColor="@color/colorText"
        android:textSize="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorText"/>

    <EditText
        android:id="@+id/et_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="30dp"
        android:hint="确认密码"
        android:maxLines="1"
        android:background="@null"
        android:maxLength="16"
        android:layout_marginRight="42dp"
        android:digits="@string/password"
        android:textColor="@color/colorText"
        android:textSize="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorText"/>

    <TextView
        android:id="@+id/tv_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/confirm"
        android:text="已阅读,并同意《用户注册协议》"
        android:textColor="@color/colorText"/>

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="284dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_get_confirm_number"
        android:gravity="center"
        android:text="立即注册"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"/>
</LinearLayout>

