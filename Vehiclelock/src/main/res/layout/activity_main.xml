<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.peipao8.vehiclelock.activity.MainActivity"
	android:orientation="vertical">
	
	<FrameLayout
		android:id="@+id/fragment_container"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/white" />
	
	<LinearLayout
		android:padding="5dp"
		android:id="@+id/ll_home_view_pranet"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FAFAFA"
		android:gravity="center"
		android:orientation="horizontal">
		
		<TextView
			android:id="@+id/tv_my_vehiclelock"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:clickable="true"
			android:drawableTop="@drawable/selector_my_vehiclelock_drawable"
			android:gravity="center_horizontal"
			android:text="我的车位"
			android:textColor="@drawable/selector_table_text"
			android:textSize="@dimen/font_medium" />
		
		
		<TextView
			android:id="@+id/tv_personal_conter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:clickable="true"
			android:drawableTop="@drawable/selector_personal_center_drawable"
			android:gravity="center_horizontal"
			android:text="个人中心"
			android:textColor="@drawable/selector_table_text"
			android:textSize="@dimen/font_medium" />
	
	</LinearLayout>
</LinearLayout>
